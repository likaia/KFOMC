<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lk.mappers.UserMapper">
	<!--定义结果集:用于存储所有数据 -->
	<resultMap type="User" id="UserResult">
		<id property="id" column="id"/>
		<result property="userName" column="userName" />
		<result property="passWord" column="passWord" />
	</resultMap>
	
	<!-- 添加 -->
	<insert id="add" parameterType="User"  >
		insert into t_user (callPhone,userName,password)values(#{callPhone},#{userName},#{password})
	</insert>
	<!-- 更新 -->
	<update id="update" parameterType="User">
		update t_user set userName=#{userName},avatar=#{avatar},picUrl =#{picUrl} where userName=#{nowUser}
	</update>
	<!-- 删除 -->
	<delete id="delete" parameterType="User">
		delete from t_user where id = #{id}
	</delete>
	<!-- 通过姓名和手机号查询 -->
	<select id="findByNamePhone" parameterType="User" resultType="User">
		select * from t_user where userName = #{userName} and callPhone = #{callPhone}
	</select>
	<!-- 通过姓名查询 -->
	<select id="findByName" parameterType="User" resultType="User">
		select * from t_user where userName = #{userName}
	</select>
	<!-- 查询所有 -->
	<select id="find" resultMap="UserResult">
		select * from t_user
	</select>
</mapper> 
